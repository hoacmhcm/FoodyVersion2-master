<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro"
    android:orientation="vertical"
    tools:context="hoa14110071.chieuthusau.foodyversion2.Activity.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarDangNhapBangEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="@style/HomeColorToolbar"
        app:title="Đăng nhập bằng Email"
        app:titleTextColor="@color/colorWhite" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txt_Email"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:backgroundTint="#ddd"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#ddd"
                android:textColorHint="#ddd" />

            <EditText
                android:id="@+id/txt_pass"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#ddd"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:textColor="#ddd"
                android:textColorHint="#ddd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_dangnhap"
                    android:layout_width="315dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_background_button_register"
                    android:text="Đăng nhập"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_quenmatkhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="Quên mật khẩu?"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center|top">

        <Button
            android:id="@+id/btn_Dangky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="Đăng ký"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</LinearLayout>
