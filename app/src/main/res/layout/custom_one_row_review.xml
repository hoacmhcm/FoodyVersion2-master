<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar_one_review"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/foody" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <TextView
                    android:id="@+id/txt_name_one_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Something here"
                    android:textStyle="bold" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9" />

                <TextView
                    android:id="@+id/txt_rating_one_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="7.4"
                    android:textColor="@color/colorAvgRating"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_comment_one_review"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/BuiThiNghe" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>