<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro"
    android:orientation="vertical"
    tools:context="hoa14110071.chieuthusau.foodyversion2.Activity.RegisterActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarDangky"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="@style/HomeColorToolbar"
        app:title="Đăng ký"
        app:titleTextColor="@color/colorWhite" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <EditText
                android:id="@+id/txt_Emaildangky"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:backgroundTint="#ddd"
                android:hint="Email"
                android:textColor="#ddd"
                android:textColorHint="#ddd" />

            <EditText
                android:id="@+id/txt_passdangky"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#ddd"
                android:hint="Mật khẩu"
                android:textColor="#ddd"
                android:textColorHint="#ddd" />

            <EditText
                android:id="@+id/txt_confirmPassdangky"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#ddd"
                android:hint="Nhập lại mật khẩu"
                android:textColor="#ddd"
                android:textColorHint="#ddd" />

            <EditText
                android:id="@+id/txt_tenhienthidangky"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#ddd"
                android:hint="Tên hiển thị"
                android:textColor="#ddd"
                android:textColorHint="#ddd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_dangnhap"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_background_button_register"
                    android:text="Đăng ký"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <TextView
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Mật khẩu phải cái ít nhất 4 ký tự."
                android:textColor="@color/colorWhite" />



        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center|bottom">

        <Button
            android:id="@+id/btnReturnDangNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#40000000"
            android:text="Đăng nhập"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />
    </LinearLayout>


</LinearLayout>
